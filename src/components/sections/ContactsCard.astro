---
import Card from '@components/Card.astro'
import { NETWORKS } from '@lib/constants'
import { Button } from '@ui/button'
import { Icon } from '@/components/icons/icon'
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-3">
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-xl font-bold text-foreground">
        Â¡Empecemos a trabajar juntos!
      </h1>
    </header>
    <address class="mt-4 flex flex-col">
      <h2 class="text-gray-500">Detalles de contacto</h2>
      <p class="text-sm font-extralight">bongiovanniivan12@gmail.com</p>
    </address>
    <div class="mt-4 flex w-fit flex-col gap-y-2">
      <h2 class="text-gray-500">Redes sociales</h2>
      <ul class="flex gap-2 flex-wrap">
        {
          NETWORKS.map((network) => (
            <a
              href={network.link}
              aria-label={`${network.network === 'gmail' ? 'Enviar' : 'Ir a'} ${network.network}`}
              target="_blank"
            >
              <Button
                title={`${network.network === 'gmail' ? 'Enviar' : 'Ir a'} ${network.network}`}
                variant="outline"
              >
                <Icon className="h-5 w-5" name={network.network } />
                <span class="sr-only">Perfil de {network.network}</span>
              </Button>
            </a>
          ))
        }
      </ul>
    </div>
  </div>
</Card>
