---
import Card from '@components/Card.astro'
import Pulse from '@components/Pulse.astro'
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-2">
  <img
    width="50"
    height="50"
    src="/sticker.png"
    class="pointer-events-none absolute bottom-[-20px] right-[-110px] z-[-1] max-h-[300px] w-auto select-none opacity-50 md:relative md:bottom-auto md:right-auto md:z-auto md:opacity-100"
    alt="Bitmoji of Ivan Bongiovanni with a portfolio"
  />
  <div class="mb-2 flex w-full items-start justify-between">
    <div class="flex flex-col">
      <h2>Actualmente</h2>
    </div>
    <Pulse />
  </div>
  <p class="text-xs">Actualmente trabajando como freelance y estudiando</p>
</Card>
